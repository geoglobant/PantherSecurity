<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runtime signals"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/labJailbreak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jailbreak" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/labRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Root" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/labDebugger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Debugger" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/labHooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hooking" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/labProxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proxy/MITM" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Attestation"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/labAttestation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/labRiskLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Risk Score: 0"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/labRiskSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />
    </LinearLayout>
</ScrollView>
